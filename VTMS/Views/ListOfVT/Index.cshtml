@model VTMS.Models.VTDetails
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="content-wrapper">

    <div class="container-fluid">

        <!-- Add new vocational trainee- button -->
        <div class="mb-3">           
            @Html.ActionLink("Enroll New Vocational Trainee", "EnrollNewVT", "ListOfVT", new { area = "" }, new { @class = "btn btn-primary" })
        </div>

        <!-- Breadcrumbs-->
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="#">Dashboard</a>
            </li>
            <li class="breadcrumb-item active">Browse VT</li>
        </ol>

        <!-- DataTables Example -->
        <div class="card mb-3">
            <div class="card-header">
                <i class="fas fa-table"></i>
                Active Vocational Trainee 
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>VT Code</th>
                                <th>Name</th>
                                <th>Institute</th>
                                <th>Course</th>
                                <th>Branch</th>
                                <th>Start Date</th>
                                <th>End Date</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>VT Code</th>
                                <th>Name</th>
                                <th>Institute</th>
                                <th>Course</th>
                                <th>Branch</th>
                                <th>Start Date</th>
                                <th>End Date</th>
                            </tr>
                        </tfoot>
                        <tbody id="ActiveVT">
                            @foreach (var item in Model.ListActive)
                            {
                                <tr>
                                    <td>@item.VTCode</td>
                                    <td>@item.VTName</td>
                                    <td>@item.InstituteName</td>
                                    <td>@item.CourseName</td>
                                    <td>@item.BranchName</td>
                                    <td>@item.VTStartDate</td>
                                    <td style="color:red">@item.VTEndDate</td>
                                </tr>

                            }

                            
                        </tbody>

                    </table>
                </div>
            </div>
        </div>

        <!-- DataTables Example -->
        <div class="card mb-3">
            <div class="card-header">
                <i class="fas fa-table"></i>
                Enrolled Vocational Trainee
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>VT Code</th>
                                <th>Name</th>
                                <th>Institute</th>
                                <th>Course</th>
                                <th>Branch</th>
                                <th>Start Date</th>
                                <th>End Date</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>VT Code</th>
                                <th>Name</th>
                                <th>Institute</th>
                                <th>Course</th>
                                <th>Branch</th>
                                <th>Start Date</th>
                                <th>End Date</th>
                            </tr>
                        </tfoot>
                        <tbody id="EnrolledVT">
                            @foreach (var item in Model.ListEnrolled)
                            {
                                <tr>
                                    <td>@item.VTCode</td>
                                    <td>@item.VTName</td>
                                    <td>@item.InstituteName</td>
                                    <td>@item.CourseName</td>
                                    <td>@item.BranchName</td>
                                    <td>@item.VTStartDate</td>
                                    <td>@item.VTEndDate</td>
                                </tr>

                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>



    </div>
    
</div>
<script>
    $(document).ready(function () {
        $.ajax({
            url: '~\ListOfVT\GetVTTables',
            success: function (data) {
                //$('.result').html(data);
                alert('Load was performed.');
            }
        });


    };
</script>

    <!-- /.content-wrapper -->

