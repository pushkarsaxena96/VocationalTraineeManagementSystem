
@{
    ViewBag.Title = "University";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="content-wrapper">

    <div class="container-fluid">

        <!-- Add new vocational trainee- button -->
        <div class="mb-3">
            <button class="btn btn-primary" data-toggle="modal" data-target="#University">Add University</button>
        </div>

        <!-- Breadcrumbs-->
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="#">Dashboard</a>
            </li>
            <li class="breadcrumb-item">
                Master
            </li>
            <li class="breadcrumb-item active">University</li>
        </ol>

        <!-- DataTables Example -->
        <div class="card mb-3">
            <div class="card-header">
                <i class="fas fa-table"></i>
                Universities
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>University Code</th>
                                <th>University Name</th>
                                <th>Area</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>University Code</th>
                                <th>University Name</th>
                                <th>Area</th>
                            </tr>
                        </tfoot>
                        <tbody id="UniversityList">
                            @foreach (var item in Model.ListUniversity)
                            {
                                <tr>
                                    <td>@item.UniversityCode</td>
                                    <td>@item.UniversityName</td>
                                    <td>@item.UniversityArea</td>
                                </tr>

                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>



    </div>
    <!-- /.container-fluid -->
    <!-- Sticky Footer -->
</div>

<!------------------------------------------------ADD University----------------------------------------------------->
<div class="modal fade" id="University" tabindex="-1" role="dialog" aria-labelledby="UniversityTitle" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="UniversityTitle"><strong>Add University</strong></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <!--<div class="container"> -->
                <div class="card card-register">
                    <!--  <div class="card-header">Register an Account</div> -->
                    <div class="card-body">
                        <form>
                            <div class="form-group">
                                <div class="form-row">
                                    <div class="col-md-6">
                                        <div class="form-label-group">
                                            <input type="number" disabled id="UniversityCode" class="form-control" placeholder="University Code" required="required" autofocus="autofocus">
                                            <label for="UniversityCode">University Code</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="form-label-group">
                                    <input type="text" id="UniversityName" class="form-control" placeholder="University Name" required="required" autofocus="autofocus">
                                    <label for="UniversityName">University Name</label>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="form-label-group">
                                    <input type="text" id="UniversityArea" class="form-control" placeholder="Area" required="required" autofocus="autofocus">
                                    <label for="UniversityArea">Area</label>
                                </div>
                            </div>
                            <a class="btn btn-primary btn-block" href="#">Save</a>
                        </form>
                    </div>
                    <!-- </div> -->
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</div> 