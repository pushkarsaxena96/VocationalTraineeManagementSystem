
@{
    ViewBag.Title = "Course";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="content-wrapper">

    <div class="container-fluid">

        <!-- Add new vocational trainee- button -->
        <div class="mb-3">
            <button class="btn btn-primary" data-toggle="modal" data-target="#Course">Add Course</button>
        </div>

        <!-- Breadcrumbs-->
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="~/Home">Dashboard</a>
            </li>
            <li class="breadcrumb-item active">
                Master
            </li>
            <li class="breadcrumb-item active">Course</li>
        </ol>

        <!-- DataTables Example -->
        <div class="card mb-3">
            <div class="card-header">
                <i class="fas fa-table"></i>
                Courses
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Course ID</th>
                                <th>Course Name</th>
                                <th>Course Description</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>Course ID</th>
                                <th>Course Name</th>
                                <th>Course Description</th>
                            </tr>
                        </tfoot>
                        <tbody id="listCourse">
                                @foreach (var item in Model.ListCourse)
                                {
                                    <tr>
                                        <td>@item.CourseId</td>
                                        <td>@item.CourseName</td>
                                        <td>@item.CourseDesc</td>                                        
                                    </tr>

                                }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>



    </div>
    <!-- /.container-fluid -->
    <!-- Sticky Footer -->
    <footer class="sticky-footer">
        <div class="container my-auto">
            <div class="copyright text-center my-auto">
                <span>Copyright © Your Website 2019</span>
            </div>
        </div>
    </footer>

</div>
<!-- /.content-wrapper -->
<!------------------------------------------------ADD COURSE ----------------------------------------------------->
<div class="modal fade" id="Course" tabindex="-1" role="dialog" aria-labelledby="CourseTitle" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="CourseTitle"><strong>Add Course</strong></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <!--<div class="container"> -->
                <div class="card card-register">
                    <!--  <div class="card-header">Register an Account</div> -->
                    <div class="card-body">
                        <form>
                            <div class="form-group">
                                <div class="form-row">
                                    <div class="col-md-12">
                                        <div class="form-label-group">
                                            <input type="number" DISABLED id="CourseID" class="form-control" placeholder="Course ID" required="required" autofocus="autofocus">
                                            <label for="CourseID">Course ID</label>
                                        </div>
                                    </div>


                                </div>
                            </div>
                            <div class="form-group">
                                <div class="form-label-group">
                                    <input type="text" id="CourseName" class="form-control" placeholder="Course Name" required="required" autofocus="autofocus">
                                    <label for="CourseName">Course Name</label>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="form-label-group">
                                    <input type="text" id="CourseDescription" class="form-control" placeholder="Course Description" required="required" autofocus="autofocus">
                                    <label for="CourseDescription">Course Decription</label>
                                </div>
                            </div>
                            <a class="btn btn-primary btn-block" href="#" data-toggle="modal" data-target="#SavedRecordModal">Save</a>
                        </form>
                    </div>
                    <!-- </div> -->
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</div>

